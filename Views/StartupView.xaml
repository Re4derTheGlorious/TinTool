<Window x:Class="Tintool.Views.StartupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tintool.Views"
        mc:Ignorable="d"
        Title="Loading..." Height="75" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <ProgressBar Value="{Binding ProgressBarValue}" DockPanel.Dock="Bottom"/>
        <TextBlock Height="25" TextAlignment="Left" DockPanel.Dock="Top" FontSize="20" Text="{Binding ProgressBarText}"/>
    </Grid>
</Window>
